{
  "name": "playwright-js-automation",
  "version": "1.0.0",
  "description": "Automation framework for web applications using Playwright",
  "main": "index.js",
  "scripts": {
    "clean:allure": "rimraf ./allure-results",
    "clean:test-results": "rimraf ./test-results",
    "clean:reports": "rimraf ./test-results ./allure-report",
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "test:allure": "npm run clean:allure && (playwright test || echo 'Tests failed, generating report anyway') && npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "playwright": "^1.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "eslint": "^7.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^6.1.2"
  }
}